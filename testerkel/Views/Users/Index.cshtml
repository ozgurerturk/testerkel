@model IEnumerable<testerkel.ViewModels.Auth.UserViewModel>

@{
    ViewData["Title"] = "Kullanıcılar";
}

<h1>Kullanıcılar</h1>

<p>
    <a asp-action="Register" class="btn btn-primary">Üye Kaydı</a>
</p>

<table class="table table-striped table-bordered table-sm" id="usersTable">
    <thead class="table-light">
        <tr>
            <th>Email</th>
            <th>Rol</th>
            <th style="width: 220px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Email</td>
                <td>@item.Role.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">
                        Detay / Düzenle
                    </a>
                    <button type="button"
                            class="btn btn-sm btn-outline-danger js-user-delete"
                            data-id="@item.Id">
                        Sil
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    <script src="~/js/custom/user.js"></script>
}