@model IEnumerable<testerkel.Models.Product>

@{
    ViewData["Title"] = "Malzemeler";
}

<div id="product-index-page">
    @* <-- sayfayı tanımak için *@
    <h1>Malzemeler</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Yeni Malzeme Kaydı</a>
    </p>

    <table class="table table-striped table-bordered table-sm">
        <thead class="table-light">
            <tr>
                <th>Malzeme Kodu</th>
                <th>Malzeme İsmi</th>
                <th>Birim</th>
                <th class="text-end">Fiyat</th>
                <th style="width: 190px;"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr data-product-id="@item.Id">
                        <td>@item.Code</td>
                        <td>@(string.IsNullOrWhiteSpace(item.Name) ? "-" : item.Name)</td>
                        <td>@item.Unit</td>
                        <td class="text-end">@item.Price.ToString("N2")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">
                                Detay/Düzenle
                            </a>

                            <button type="button"
                                    class="btn btn-sm btn-outline-danger js-product-delete"
                                    data-id="@item.Id">
                                Sil
                            </button>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">Malzeme bulunamadı</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="~/js/custom/product.js"></script>
}
