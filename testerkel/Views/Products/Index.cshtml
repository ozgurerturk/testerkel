@model IEnumerable<testerkel.Models.Product>

@{
    ViewData["Title"] = "Ürünler";
}

<h1>Ürünler</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Ürün Kaydı</a>
</p>

<table class="table table-striped table-bordered table-sm">
    <thead class="table-light">
        <tr>
            <th>Ürün Kodu</th>
            <th>Ürün İsmi</th>
            <th>Birim</th>
            <th class="text-end">Fiyat</th>
            <th style="width: 190px;"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@(string.IsNullOrWhiteSpace(item.Name) ? "-" : item.Name)</td>
                    <td>@item.Unit</td>
                    <td class="text-end">@item.Price.ToString("N2")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Detay/Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center text-muted">Ürün bulunamadı</td>
            </tr>
        }
    </tbody>
</table>
